<h2>Edit Account </h2>

<button><%= link_to 'Change My Password ', user_edit_password_path(current_user)%></button>
<%= form_for(current_user, :url => {:action => 'update', :id => current_user.id}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :first_name, 'First Name' %><br />
    <%= f.text_field :firstname, autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.label :last_name, 'Last Name' %><br />
    <%= f.text_field :lastname, autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.label :year, 'Class/Year' %><br />
    <%= f.select :year, (0..(Time.now.year + 20)), :selected => Time.now.year %>
  </div>

  <div class="field">
    <%= f.label :graduation_year, 'Graduation Year' %><br />
    <%= f.select :year, (0..(Time.now.year + 20)), :selected => Time.now.year %>
  </div>

  <div class="field">
    <%= f.label :major %><br />
    <%= f.text_field :major, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :minor %><br />
    <%= f.text_field :minor, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :gpa, 'GPA' %><br />
    <%= f.text_field :gpa, :value => number_with_precision(f.object.gpa, :precision => 1), autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :phone_number, 'Phone Number' %><br />
    <%= react_component "PhoneInputMask", {phone: current_user.phone_number} %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

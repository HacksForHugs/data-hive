
<div class="small-12 large-10 small-centered large-uncentered large-offset-2 columns page_title_new_project">
	Create a New Project
</div>

<div class="small-12 large-8 small-centered large-uncentered large-offset-2 columns datahive-display">
	<%= form_for @project do |f| %>
		<div class="row creation_rows">
			<div class="large-2 columns">
				<span class="side-label">Title*</span>
			</div>
			<div class="large-10 columns end">
				<%= f.text_field :title, class: "textbox" %>
			</div>
		</div>
		<div class="row creation_rows">
			<div class="large-2 columns">
				<span class="side-label">Subtitle*</span>
			</div>
			<div class="large-10 columns end">
				<%= f.text_field :subtitle, class: "textbox" %>
			</div>
		</div>
		<div class="row creation_rows">
			<div class="large-2 columns">
				<span class="side-label">Description*</span>
			</div>
			<div class="large-10 columns end">
				<%= f.text_field :description, class: "textbox" %>
			</div>
		</div>
		<div class="row creation_rows">
			<div class="small-4 large-12 small-centered small-only-text-center medium-only-text-center columns">
				<span class="side-label">Basic Info</span>
			</div>
		</div>
		<div class="row creation_rows">
			<div class="large-10 large-offset-2 columns">
				<span class="side-label">What field does your project fall under?*</span>
			</div>
			<div class="large-4 large-offset-2 columns end">
				<%= f.select(:field, @fields, {}, {class: "selectbox_white"}) %>
			</div>
		</div>
		<div class="row creation_rows">
			<div class="large-10 large-offset-2 columns">
				<span class="side-label">Preferred type of student?*</span>
			</div>
			<div class="large-5 large-offset-2 columns end">
				<%= f.select(:education_level, @education_levels, {}, {class: "selectbox_white"}) %>
			</div>
		</div>
		<div class="row creation_rows">
			<div class="large-10 large-offset-2 columns">
				<span class="side-label">What kind of person are you looking for? (Maximum 5)*</span>
			</div>
			<div class="large-2 large-offset-2 columns">
		  		<input type="text" name="positions[]" class="textbox_white" />
		  	</div>
			<div class="large-2 columns">
		  		<input type="text" name="positions[]" class="textbox_white"/>
		  	</div>
			<div class="large-2 columns">
		  		<input type="text" name="positions[]" class="textbox_white"/>
		  	</div>
			<div class="large-2 columns">
		  		<input type="text" name="positions[]" class="textbox_white"/>
		  	</div>
			<div class="large-2 columns end">
		  		<input type="text" name="positions[]" class="textbox_white"/>
		  	</div>
		</div>
		<div class="row creation_rows">
			<div class="large-10 large-offset-2 columns">
				<span class="side-label">Form of compensation?*</span>
			</div>
			<div class="large-5 large-offset-2 columns end">
				<%= f.select(:compensation, @compensations, {}, {class: "selectbox_white"})%>
			</div>
		</div>
		<div class="row creation_rows">
			<div class="large-10 large-offset-2 columns">
				<span class="side-label">Workload?*</span>
			</div>
			<div class="large-2 large-offset-2 columns">
				<%= f.number_field :hours_per_week, class: :text_field, step: 0.5, class: "textbox_white" %>
			</div>
			<div class="large-1 columns end">
				<span class="info_line">Hours/Week</span>
			</div>
		</div>
		<div class="row creation_rows">
			<div class="large-3 large-offset-2 columns">
				<span class="side-label">Project start date*</span>
				<%= f.date_field :startdate , class: "textbox_white" %>
			</div>
			<div class="large-3 columns">
				<span class="side-label">Project end date*</span>
				<%= f.date_field :enddate, class: "textbox_white"%>
			</div>
			<div class="large-3 columns end">
				<span class="side-label">Application end date*</span>
				<%= f.date_field :app_deadline, class: "textbox_white"%>
			</div>
		</div>
		<div class="large-12 columns text-center creation_rows">
			Do you have questions all applicants must answer? If so, please provide them here:
		</div>
		<div class="row creation_rows">
			<div class="large-10 large-offset-1 columns">
				<ol>
				  <li><input type="text" name="questions[]" class="textbox" /> </li>
				  <li><input type="text" name="questions[]" class="textbox" /> </li>
				  <li><input type="text" name="questions[]" class="textbox" /> </li>
				</ol>
			</div>
		</div>

		<div class="larger-12 columns text-center">
			<%= f.submit %>
		</div>
	<% end %>
</div>


